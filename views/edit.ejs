<!-- edit page -->
<html lang="en" data-bs-theme="dark">
  <head>
    <%- include('./partials/header'); -%>
    <title><%= title %></title>
  </head>
  <body>
    <%- include('./partials/navbar'); -%>
    <div class="container min-vh-100">
      <div class="p-5 bg-primary text-white text-left rounded">
        <h1>Edit Message</h1>
      </div>
      <br />
      <div class="card">
        <div class="card-body">
          <form
            method="POST"
            action="<%= basePath %>/edit/<%= userPost.messageId %>?_method=PUT"
          >
            <input
              class="form-control"
              type="text"
              name="user"
              value="<%= userPost.user %>"
            />
            <br />
            <textarea
              class="form-control"
              type="text"
              name="text"
              value="<%= userPost.text %>"
              rows="3"
            >
<%= userPost.text %></textarea
            >
            <input
              class="form-control"
              type="hidden"
              name="added"
              value="<%= userPost.added %>"
            />
            <input
              class="form-control"
              type="hidden"
              name="messageId"
              value="<%= userPost.messageId %>"
            />
            <br />
            <button class="btn btn-danger" type="submit">
              &nbsp;&nbsp;Save&nbsp;&nbsp;
            </button>
          </form>
        </div>
      </div>
    </div>
    <%- include('./partials/footer'); -%>
  </body>
</html>
